#snapshots_tree_div
  - if @record.snapshots.count > 0
    %fieldset
      %h3= _('Available Snapshots')
      #snapshots_treebox{:style => "width: 100%"}
      = render(:partial => "layouts/dynatree",
        :locals => {:tree_id => "snapshots_treebox",
          :tree_name => "snapshots_tree",
          :id_prefix => "snap_",
          :json_tree => @snaps,
          :onclick => 'miqOnClickSnapshotTree',
          :click_url => "/#{request.parameters["controller"]}/snap_pressed/",
          :select_node => "#{session[:snap_selected]}",
          :icon_size => 24,
          :open_close_all_on_dbl_click => true})

    :javascript
      miqDynatreeActivateNodeSilently('snapshots_tree', "#{session[:snap_selected]}");
